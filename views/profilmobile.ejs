<html>
<head>
    <title>Profil</title>
    <link type="text/css" rel="stylesheet" href="assets/main.css">
    <link type="text/css" rel="stylesheet" href="assets/list.css">
    <link type="text/css" rel="stylesheet" href="assets/profilmobile.css">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap" rel="stylesheet">
</head>

<body>
    <% include partials/menu.ejs%>
    <div id="topBar"><h2>Hallo, <%= username%></h2></div>
    <div id="helper"></div>
    <div id="contentMobile">
        <h2 class="headingMobile">Kurse</h2>
        <% courses.forEach(function (item) { %>
            <p class="courseName" style="color: <%= item.subjectColor%>"><%=item.subjectName%> </p>
        <% });%>
    </div>

    <div id="contentMobile">
        <h2 class="headingMobile">Offene Aufgaben</h2>
        <% utils.forEach(function (item) { %>
        <div class="utilCard2">
            <p><%=item.utilName%> </p>
            <p class="utilDescription2"><%=item.utilDescription%> </p>
            <p class="utilDescription2">(<%=item.subjectName%>)</p>
        </div>


        <% });%>
    </div>

</body>
</html>
